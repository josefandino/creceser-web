---
import { Image } from "astro:assets";
import Whatsapp from "./Whatsapp.astro";

interface Props {
  title: string;
  subtitle: string;
  description: string;
  button: string;
  buttonLink: string;
  image?: string;
}

const { title, subtitle, description, button, buttonLink, image } = Astro.props;
---

<section class="banner" id="inicio">
  <div class="banner-container">
    <div class="banner-content">
      <h1 class="banner-title">{title}</h1>
      <p class="banner-subtitle">{subtitle}</p>
      {description && <p class="banner-description">{description}</p>}
      <!-- <a href={buttonLink} class="banner-button">{button}</a> -->
      <div class="banner-button">
        <Whatsapp
          phone="51986717150"
          text="Â¿Comenzamos?"
          class="banner-button"
          textColor="bg"
        />
      </div>
    </div>

    <div class="banner-image">
      <div class="image-circle">
        {
          image && (
            <Image
              src={image}
              alt={title}
              width={400}
              height={400}
              loading="eager"
              format="webp"
            />
          )
        }
      </div>
    </div>
  </div>
</section>

<style>
  .banner {
    background-color: var(--color-bg);
    padding: 4rem 2rem;
    min-height: 500px;
    display: flex;
    align-items: center;
  }

  .banner-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    width: 100%;
  }

  .banner-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .banner-title {
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-primary);
    line-height: 1.2;
    margin: 0;
  }

  .banner-subtitle {
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--color-primary);
    line-height: 1.4;
    margin: 0;
  }

  .banner-description {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.6;
    margin: 0;
  }

  .banner-button {
    display: inline-block;
    padding: 1rem 2.5rem;
    background-color: var(--color-primary);
    color: #fefefe;
    text-decoration: none;
    border-radius: 50px;
    font-size: 1.1rem;
    font-weight: 500;
    transition: all 0.3s ease;
    align-self: flex-start;
    cursor: pointer;
    box-shadow: 0 4px 12px rgba(42, 149, 218, 0.3);
  }

  .banner-button:hover {
    background-color: var(--color-primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(42, 149, 218, 0.4);
  }

  .banner-image {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .image-circle {
    width: 400px;
    height: 400px;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .image-circle img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .banner-container {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .banner-title {
      font-size: 2.5rem;
    }

    .banner-subtitle {
      font-size: 1.3rem;
    }

    .image-circle {
      width: 350px;
      height: 350px;
    }
  }

  @media (max-width: 640px) {
    .banner {
      padding: 3rem 1.5rem;
      min-height: auto;
    }

    .banner-title {
      font-size: 2rem;
    }

    .banner-subtitle {
      font-size: 1.2rem;
    }

    .banner-button {
      padding: 0.9rem 2rem;
      font-size: 1rem;
      width: 100%;
      text-align: center;
    }

    .image-circle {
      width: 280px;
      height: 280px;
    }
  }
</style>
